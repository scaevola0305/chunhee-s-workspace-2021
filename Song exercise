package day1102.oopex.sample;

public class Song {

	// 필드(변수, 상수)
	String title;
	String artist;
	int year;
	String country;

	public Song() {
	}// 생성자의 접근제어자는 일반적으로 클래스의 접근제어자와 같다.

	public Song(String title, String artist, int year, String country) {
		this.title = title;
		this.artist = artist;
		this.year = year;
		this.country = country;
	}

	public void show() {
		System.out.printf("%s, %d년 %s [%s]", country, year, artist, title);
	}

	public static void main(String[] args) {
		Song song = new Song("Dancing Queen", "ABBA", 1978, "스웨덴");
		song.show();
	}

}
